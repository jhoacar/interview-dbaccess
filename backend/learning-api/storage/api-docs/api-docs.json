    "paths": {
        "/api/courses": {
            "get": {
                "tags": [
                    "CourseController"
                ],
                "summary": "Mostrar cursos",
                "responses": {
                    "200": {
                        "description": "Mostrar todos los cursos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "tags": [
                    "CourseController"
                ],
                "summary": "Subir un curso",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Curso de Programacion"
                                    },
                                    "duration": {
                                        "type": "string",
                                        "example": "01:30:00"
                                    },
                                    "start_date": {
                                        "type": "date",
                                        "example": "2016-01-23 11:53:20"
                                    },
                                    "instructor_id": {
                                        "type": "string",
                                        "example": "61d2082c371e5949897a8fe5"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Subir un curso a la base de datos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
