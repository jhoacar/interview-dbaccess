{
    "openapi": "3.0.0",
    "info": {
        "title": "API Course",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        },
        {
            "url": "http://localhost:8000"
        },
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/courses": {
            "get": {
                "tags": [
                    "CourseController"
                ],
                "summary": "Mostrar cursos",
                "responses": {
                    "200": {
                        "description": "Mostrar todos los cursos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "tags": [
                    "CourseController"
                ],
                "summary": "Subir un curso",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Curso de Programacion"
                                    },
                                    "duration": {
                                        "type": "string",
                                        "example": "1h-30min"
                                    },
                                    "start_date": {
                                        "type": "date",
                                        "example": "29-12-2019"
                                    },
                                    "instructor_id": {
                                        "type": "string",
                                        "example": "61d2082c371e5949897a8fe5"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Subir un curso a la base de datos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
        "/api/instructors": {
            "get": {
                "tags": [
                    "InstructorController"
                ],
                "summary": "Mostrar instructores",
                "responses": {
                    "200": {
                        "description": "Mostrar todos los instructores."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "tags": [
                    "InstructorController"
                ],
                "summary": "Subir un instructor",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Jose"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Subir un instructor a la base de datos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
        "/api/students": {
            "get": {
                "tags": [
                    "StudentController"
                ],
                "summary": "Mostrar estudiantes",
                "responses": {
                    "200": {
                        "description": "Muestra todos los estudiantes."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "tags": [
                    "StudentController"
                ],
                "summary": "Subir un estudiante",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Jose"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Subir un estudiante a la base de datos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "CourseController",
            "description": "API Endpoints of Courses"
        },
        {
            "name": "InstructorController",
            "description": "API Endpoints of Instructors"
        },
        {
            "name": "StudentController",
            "description": "API Endpoints of Students"
        }
    ],
    "security": [
        []
    ]
}